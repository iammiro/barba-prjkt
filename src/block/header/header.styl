.header
  height 81px
  width 100%
  background-color #85c8fe
  flex-box(flex, row, space-between, center)
  &__logo-text-wrap
    height 81px
    flex-box(flex, row, flex-start, center)
  &__logo
    background-color #fefefe
    height 81px
    margin-right 30px
    width 330px
    flex-box(flex, column, center, center)
  &__text
    height 24px
    padding-right 250px
    color #ffffff
    font-family 'Montserrat', sans-serif;
    font-size 24px
    font-weight 400
  &__button
    width 134px
    height 45px
    border-radius 5px
    background-color #ff6b01
    margin-right 69px
    flex-box(flex, column, center, center)
  &__btn-link
    color #ffffff
    font-family 'Montserrat', sans-serif;
    font-size 24px
    font-weight 400
    text-decoration none