.stories
  width 90%
  background-color #ffffff
  margin 30px
  padding 0 26px
  &__head
    height 79px
    display flex
    flex-direction row
    justify-content space-between
    align-items center
  &__span
    color #878787
    font-family 'Montserrat', sans-serif
    font-size 18px
    font-weight 400
.stories
  margin 27px
  padding-bottom 15px
  &__h2
    margin 27px
    color #85c8fe
    font-family 'Montserrat', sans-serif
    font-size 30px
    font-weight bold
    line-height 1.3
  &__p
    font-family 'Verdana', sans-serif
    font-size 14px
    font-weight 400
    color #323232
    margin 12px 0
  &__img-little
    width 200px
    float left
    margin 10px 20px 10px 0
  &__img-big
    display flex
    flex-direction row
    justify-content center
    align-items center