@import url('https://fonts.googleapis.com/css?family=Montserrat');

body
  display flex
  flex-direction column
  justify-content center
  align-items center
.main
  background-color #f4f4f4
  width 1280px
  display flex
  flex-direction row
  justify-content space-between
.stories
  width 835px
  background-color #ffffff
  margin 30px
  padding 0 26px
  &__head
    height 79px
    display flex
    flex-direction row
    justify-content space-between
    align-items center
  &__span
    color #878787
    font-family 'Montserrat', sans-serif;
    font-size 18px
    font-weight 400
.stories-navigation
  display flex
  justify-content space-around
  &__item
    height 164px
    display flex
    flex-direction column
    justify-content space-between
    align-items center
  &__link
    height 19px
    color #878787
    font-family 'Montserrat', sans-serif;
    font-size 24px
    font-weight 400
.stories
  margin 27px
  &__h2
    margin 27px
    color #85c8fe
    font-family 'Montserrat', sans-serif;
    font-size 30px
    font-weight bold
    line-height 1.3
  &__p
    font-family 'Verdana'
    font-size 14px
    font-weight 400
    color #323232
    margin 12px 0
  &__img-little
    width 200px
    float left
    margin 10px 20px 10px 0
  &__img-big
    display flex
    flex-direction row
    justify-content center
    align-items center
